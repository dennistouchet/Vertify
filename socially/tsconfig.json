{
  "buildOnSave": false,
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "isolatedModules": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": true
  },
  "filesGlob": [
    "client/**/*.ts",
    "server/**/*.ts",
    "typings/**/*.d.ts"
  ],
  "files": [
    "client/app.ts",
    "client/imports/parties-form/parties-form.ts",
    "server/load-collections.ts",
    "server/main.ts",
    "typings/globals/es6-shim/index.d.ts",
    "typings/globals/meteor/index.d.ts",
    "typings/index.d.ts",
    "typings/modules/es6-promise/index.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
