{
  "$schema": "http://json-schema.org/schema#",
  "id" : "http://vertify.hellodata.com/tenant_role.json",
  "title" : "tenant_role",
  "description" : "This is the Translate Role schema.",
  "tenant_role" : {
    "type": "object",
    "properties" : {
      "tenant_id":{
        "type": "integer"
        },
      "id":{
        "type": "string"
        },
      "modified":{
        "type": "string",
        "format" : "date-time"
        },
      "created":{
        "type": "string",
        "format" : "date-time"
      },
      "is_deleted":{
        "type": "boolean",
        "default" : false
        },
      "permissions":{
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
      "workspaces":{
            "type": "array",
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        }
    },
    "required" : [ "tenant_id", "id", "modified", "created", "is_deleted" ]
  }
}
